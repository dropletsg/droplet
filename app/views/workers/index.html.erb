<div class="container search-container mt-5 mb-5">
  <%= form_tag workers_path, method: :get do%>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a worker" 
    %>
    <%= submit_tag "Search", class: "btn btn-primary"%>
  <% end %>
</div>  

<div class="case-index-top">
  <p><%= link_to "Add Worker", new_worker_path, class: "btn btn-outline-primary" %></p>
</div>
  
<div class="all-case-card">
  <table class="table table-striped table-hover"> 
    <tr>
      <th scope="col">Case No.</th>
      <th scope="col">Name</th>
      <th scope="col">Alias</th>
      <th scope="col">Mobile number</th>
      <th scope="col">Email</th>
      <th scope="col">Description</th>
    </tr>

    <tbody>
      <% @workers.each_with_index do |worker, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to worker.name, worker_path(worker) %></td>
          <td><%= link_to worker.alias, worker_path(worker) %></td>
          <td><%= link_to worker.mobile_number, worker_path(worker) %></td>
          <td><%= link_to worker.email, worker_path(worker) %></td>
          <td><%= worker.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div class="public-container mt-4">
  <div class="filter-container">
    <div class="row mb-4">
      <p class="a">Categories:</p>
      <a class="filter-btn" href='active_cases'>Show all</a>
      <a class="filter-btn" href='active_cases?category=medical'>Medical</a>
      <a class="filter-btn" href='active_cases?category=agent_fees'>Agent Fees</a>
      <a class="filter-btn" href='active_cases?category=bills'>Bills</a>
      <a class="filter-btn" href='active_cases?category=others'>Others</a>
    </div>
  </div>  
  <div class="row">
    <% @cases.each do |c| %>
      <div class="public-card">

        <div class="card-header row justify-content-start pb-0">
          <p>Case ref<%= c.id %></p>
        </div>

        <div class="row pt-3 ml-2">
          <div class="col">
            <p><strong>Title</strong></p>
          </div>
          <div class="col mr-5">
            <%= c.title %>
          </div>
        </div>
          
        <div class="row ml-2">
          <div class="col">
            <p><strong>Category</strong></p>
          </div>
          <div class="col mr-5">
            <%= c.category %>
          </div>
        </div>

        <div class="row ml-2">
          <div class="col">
            <p><strong>Start Date</strong></p>
            <p><strong>End Date</strong></p>
          </div>
          <div class="col mr-5">
            <p><%= c.end_date %></p>
            <p><%= c.start_date %></p>
          </div>
        </div>

        <div class="row ml-2">
          <div class="col">
           <p><strong>Progress</strong></p>
          </div>
          <div class="col mr-5">  
            <div class="progress">
              <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
            </div>
          </div>
        </div>
        
        <div class="row ml-2">
          <div class="col">
            <p><strong>Summary</strong></p>
          </div>
          <div class="col mr-5">
            <p><%= c.story_summary %></p>
          </div>
        </div>

        <p>
          <button class="btn btn-primary ml-4" type="button" data-toggle="collapse" data-target="#caseCoordinator<%= c.id %>" aria-expanded="false" aria-controls="caseCoordinator<%= c.id %>">
          Donate
          </button>
        </p>

        <div class="collapse" id="caseCoordinator<%= c.id %>">
          <div class="card card-body">
            <div class="paylah-container">
              <p><%= image_tag "paylah.png", alt: "paylah", width: "90%" %></p>
            </div>
            <p> Send your contribution to coordinator <strong><%= c.coordinator.name%></strong> using the QR code above</p>
          </div>
        </div>

                
        <p>
          <button class="btn btn-primary mt-2 ml-4" type="button" data-toggle="collapse" data-target="#caseStory<%= c.id %>" aria-expanded="false" aria-controls="caseStory<%= c.id %>">
            Learn More
          </button>
        </p>

        <div class="collapse" id="caseStory<%= c.id %>">
          <div class="card card-body">
            <%= c.story %>
          </div>
        </div>

      </div>
    <%end%>
  </div>
</div>
  




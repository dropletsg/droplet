<div class="section">
  <div class="container">
    <div class="container d-flex mt-3 p-0  align-items-center">
      <div>
        <p class="a">Categories:</p>
      </div> 
      <div>
        <a class="btn btn-outline-primary-rounded" href='active_cases'>Show all</a>
        <a class="btn btn-outline-primary-rounded" href='active_cases?category=medical'>Medical</a>
        <a class="btn btn-outline-primary-rounded" href='active_cases?category=agent_fee'>Agent Fees</a>
        <a class="btn btn-outline-primary-rounded" href='active_cases?category=bills'>Bills</a>
        <a class="btn btn-outline-primary-rounded" href='active_cases?category=others'>Others</a>
      </div>
    </div>
    <div class="card-grid mt-5">
      <% @cases.each do |c| %>
        <div class="card" style="width: 22rem;">
          <div class="card-header">
            Case Ref #<%= c.id %>
          </div>
          <div class="row my-4 mx-2">
            <div class="col">
              <%= render 'progress', c:c %>
              <table class="w-100 mt-2">
                <tbody>
                  <tr>
                    <td width="40%"><strong>Title: </strong></td>
                    <td><%= c.title%></td>
                  </tr>
                  <tr>
                    <td><strong>Category: </strong></td>
                    <td><%= c.category&.capitalize %></td>
                  </tr>
                  <tr>
                    <td><strong>Start date: </strong></td>
                    <td><%= c.start_date.strftime("%d %B %Y") %></td>
                  </tr>
                  <tr>
                    <td><strong>End date: </strong></td>
                    <td><%= c.end_date.strftime("%d %B %Y") %><small class="text-muted"> </small></td>
                  </tr>
                </tbody>
              </table>
              <div class="mt-3">
                <strong>Summary: </strong>
                <p class="text-justify"><%= c.story_summary %></p>
              </div>

              <p>
                <button class="btn btn-primary mt-2 btn-wd" type="button" data-toggle="collapse" data-target="#caseStory<%= c.id %>" aria-expanded="false" aria-controls="caseStory<%= c.id %>">
                  Learn More
                </button>
              </p>
              <div class="collapse" id="caseStory<%= c.id %>">
                <div class="card-body">
                  <p class="text-justify"><%= c.story %></p>
                </div>
              </div>

              <p>
                <button class="btn btn-primary mt-2 btn-wd" type="button" data-toggle="collapse" data-target="#caseCoordinator<%= c.id %>" aria-expanded="false" aria-controls="caseCoordinator<%= c.id %>">
                Contribute
                </button>
              </p>
              <div class="collapse" id="caseCoordinator<%= c.id %>">
                <div class="card-body">
                  <div class="paylah-container">
                    <p class="text-center"><%= image_tag "paylah.png", alt: "paylah", width: "60%" %></p>
                  </div>
                  <p> Send your contribution to the QR code above </p>
                </div>
                <%= simple_form_for @payment do |f| %>
                  <%= hidden_field_tag 'case_id', c.id %>
                  <%= f.input :amount %>
                  <%= f.button :submit, 'Submit', class: 'btn btn-primary mb-3 btn-wd' %>
                <% end %>
              </div>
              
              
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    


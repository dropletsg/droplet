<div class="section">
  <div class="container ">
    <header><h1><%= @case.title %></h1></header>
    <div class="w-50">
      <div class="description ">
        <div class="mt-3"><%= @case.story_summary %></div>
        <div class="mt-3"><%= @case.story %></div>
      </div>
      <div class="content">
        <div class="case-member">
          <div class="case-member-title"><h4>Coordinator and Beneficiary</h4></div>
          <hr>
          <div class="case-member d-flex justify-content-between">
            <div class="coordinator d-flex">
              <div class="coordinator-avatar m-2">
                <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
              </div>
              <div class="coordinator-info m-2">
                <p><%= @case.coordinator.name %></p>
                <p>Coordinator</p>
                <button  class="btn btn-outline-primary">Contact</button>
              </div>
            </div>
            <div class="beneficiary d-flex">
              <div class="beneficiary-avatar m-2">
                <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
              </div>
              <div class="beneficiary-info m-2">
                <p><%= @case.worker.alias %></p>
                <p>Beneficiary</p>
              </div>
            </div>
          </div>
        </div>
        <div class="comment">
        <h4>Comment</h4>
        <hr>
        </div>
      </div>
    </div>
    <div class="sidebar">
      
    </div>
  </div>
  
</div>